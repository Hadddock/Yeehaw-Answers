extends layout 
block content 
    h1 #{title}
    form(method="POST" action="")
        div.form-group
            label(for="username") Username: 
            input#username(type="text" placeholder="username" name="username" required="true" value=(undefined===user ? "" : user.username))
            label(for="date_of_birth") Date of Birth: 
            input#date_of_birth(type="date" placeholder="0000-00-00" name="date_of_birth" required="true" value=(undefined===user ? "" : user.date_of_birth))
            button(type="submit") Submit
    if errors
        ul 
            for error in errors 
                li!= error.msg