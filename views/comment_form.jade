extends layout 
block content 
    h1 #{title}
    form(method="POST" action="")
        div.form-group
            label(for="body") Comment: 
            input#body(type="textarea"  name="body" required="true" value=(undefined===comment ? "" : comment.body))
            button(type="submit") Submit
    if errors
        ul 
            for error in errors 
                li!= error.msg