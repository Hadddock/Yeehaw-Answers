extends layout 

block content 
    h1= title 
    form(method="POST", action="")
        div.form-group
            label(for="title") Question
            input#title(name="title" type="text" placeholder="Question" value=(post===undefined ? "" : post.title))
            label(for="body") Additional Information
            input#body(name="body" type="text" placeholder="Additional information" value=(post===undefined ? "" : post.body))
            label(for="category") Category
            select#category(name="category"   value=(post===undefined ? "" : post.category))
                for category in categories 
                    option(value=category) #{category}
            button(type="submit") Submit
    if errors
        ul 
            for error in errors 
                li!= error.msg

